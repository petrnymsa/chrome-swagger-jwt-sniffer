{
    "manifest_version": 3,
    "name": "Swagger JWT Token Extractor",
    "version": "1.0.0",
    "description": "Automatically capture and decode JWT tokens from Swagger UI login responses. Perfect for API development and testing.",
    "author": "Your Name",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Swagger JWT Token Extractor",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "worker.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options.html"
}